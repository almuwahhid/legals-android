<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="@dimen/dimen_16dp"
        android:layout_marginBottom="@dimen/dimen_1dp"
        android:background="@color/white"
        style="@style/clickable"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        tools:context="id.go.kemlu.legalisasidokumen.app.notifikasi.adapter.NotifikasiAdapter">
    <LinearLayout android:layout_width="match_parent"
                  android:padding="@dimen/dimen_8dp"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/tv_nama"
                  style="@style/Text.Standard.Bold"
                  android:text="Al Muwahhid"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/tv_status"
                  android:layout_marginTop="@dimen/dimen_2dp"
                  style="@style/Text.Standard"
                  android:text="Consular Officer"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/tv_lokasi"
                  android:layout_marginTop="@dimen/dimen_4dp"
                  style="@style/Text.Standard"
                  android:textColor="@color/grey_400"
                  android:text="KBRI Tokyo"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
