<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="id.go.kemlu.legalisasidokumen.app.detailpermohonan.permohonanselesai.KwitansiActivity">
    <include layout="@layout/toolbar_white"/>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:padding="@dimen/dimen_16dp"
                  android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content">
            <ImageView android:layout_width="@dimen/dimen_50dp"
                       android:src="@drawable/ic_logo"
                       android:layout_height="@dimen/dimen_50dp"/>
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                <RelativeLayout android:layout_width="match_parent"
                                android:background="@color/grey_200"
                                android:layout_marginLeft="@dimen/dimen_8dp"
                                android:layout_marginRight="@dimen/dimen_8dp"
                                android:layout_toLeftOf="@+id/tv_kwitansi"
                                android:layout_height="@dimen/dimen_50dp">
                    <TextView android:layout_width="wrap_content"
                              android:textAlignment="center"
                              style="@style/Text.Standard"
                              android:layout_centerVertical="true"
                              android:layout_centerHorizontal="true"
                              android:text="Pelayanan Legalisasi\nSubdit Legalisasi, Protokol dan Konsuler"
                              android:layout_height="wrap_content"/>
                </RelativeLayout>
                <TextView android:layout_width="wrap_content"
                          android:id="@+id/tv_kwitansi"
                          style="@style/Text.Title"
                          android:text="KWITANSI"
                          android:layout_centerVertical="true"
                          android:layout_alignParentRight="true"
                          android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/dimen_16dp"
                        android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      style="@style/Text.Standard"
                      android:textColor="@color/green_600"
                      android:text="Transaksi Berhasil"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_alignParentRight="true"
                      style="@style/Text.Standard"
                      android:textColor="@color/green_600"
                      android:text="10 Oktober 2019"
                      android:layout_height="wrap_content"/>
        </RelativeLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:padding="@dimen/dimen_16dp"
                      android:layout_height="wrap_content">
                        <LinearLayout android:layout_width="match_parent"
                                      android:layout_height="wrap_content">
                            <TextView android:layout_width="0dp"
                                      style="@style/Text.Standard"
                                      android:layout_weight="1"
                                      android:text="Telah diterima dari"
                                      android:layout_height="wrap_content"/>
                            <TextView android:layout_width="0dp"
                                      android:id="@+id/tv_telahditerima"
                                      style="@style/Text.Standard"
                                      android:layout_weight="1"
                                      android:text=": Bella Husada"
                                      android:layout_height="wrap_content"/>
                        </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_marginTop="@dimen/dimen_8dp"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="0dp"
                          style="@style/Text.Standard"
                          android:layout_weight="1"
                          android:text="No. Permohonan"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="0dp"
                          android:id="@+id/tv_nopermohonan"
                          style="@style/Text.Standard"
                          android:layout_weight="1"
                          android:text=": G0009/11/06"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
                        <LinearLayout android:layout_width="match_parent"
                                      android:layout_marginTop="@dimen/dimen_8dp"
                                      android:layout_height="wrap_content">
                            <TextView android:layout_width="0dp"
                                      style="@style/Text.Standard"
                                      android:layout_weight="1"
                                      android:text="Total Biaya"
                                      android:layout_height="wrap_content"/>
                            <TextView android:layout_width="0dp"
                                      android:id="@+id/tv_totalbiaya"
                                      style="@style/Text.Standard"
                                      android:layout_weight="1"
                                      android:text=": Rp. 112.000"
                                      android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout android:layout_width="match_parent"
                          android:layout_marginTop="@dimen/dimen_8dp"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="0dp"
                          style="@style/Text.Standard"
                          android:layout_weight="1"
                          android:text="Jumlah Dokumen"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="0dp"
                          android:id="@+id/tv_jumlahdokumen"
                          style="@style/Text.Standard"
                          android:layout_weight="1"
                          android:text=": 1"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
                        <LinearLayout android:layout_width="match_parent"
                          android:layout_marginTop="@dimen/dimen_8dp"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="0dp"
                          style="@style/Text.Standard"
                          android:layout_weight="1"
                          android:text="Pembayaran Transfer ke"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="0dp"
                          android:id="@+id/tv_pembayaranke"
                          style="@style/Text.Standard"
                          android:layout_weight="1"
                          android:text=": Bank Mandiri"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
                        <LinearLayout android:layout_width="match_parent"
                          android:layout_marginTop="@dimen/dimen_8dp"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="0dp"
                          style="@style/Text.Standard"
                          android:layout_weight="1"
                          android:text="No. Virtual Account"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="0dp"
                          android:id="@+id/tv_novirtual"
                          style="@style/Text.Standard"
                          android:layout_weight="1"
                          android:text=": : 0810284610009280000"
                          android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
