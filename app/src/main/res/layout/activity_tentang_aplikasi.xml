<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        android:background="@color/grey_200"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="id.go.kemlu.legalisasidokumen.app.register.RegisterActivity">
    <include layout="@layout/toolbar_white"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <ImageView
                    android:layout_width="@dimen/dimen_96dp"
                    android:layout_marginTop="@dimen/dimen_32dp"
                    android:layout_marginBottom="@dimen/dimen_32dp"
                    android:layout_height="@dimen/dimen_96dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_logo"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:background="@color/white"
                          android:padding="@dimen/dimen_16dp">
                <TextView
                        android:id="@+id/tv_description"
                        android:layout_width="match_parent"
                        style="@style/Text.SubTitleField.Regular"
                        android:text="Legalisasi Dokumen merupakan pengesahan terhadap dokumen dan hanya dilakukan terhadap tanda tangan dan tidak mencakup kebenaran isi dokumen. Setiap dokumen Indonesia yang akan dipergunakan di negara lain atau dokumen asing yang akan dipergunakan di Indonesia perlu dilegalisasi oleh instansi yang berwenang."
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_marginTop="@dimen/dimen_2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_16dp">

                <TextView
                        style="@style/Text.SubTitleField.Regular"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Version"/>

                <TextView
                        android:id="@+id/tv_version"
                        style="@style/Text.TitleField.Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.0.0"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_marginTop="@dimen/dimen_2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_16dp">

                <TextView
                        style="@style/Text.SubTitleField.Regular"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Name"/>

                <TextView
                        android:id="@+id/tv_nama"
                        style="@style/Text.TitleField.Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Legalisasi Dokumen"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_marginTop="@dimen/dimen_2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_16dp">

                <TextView
                        style="@style/Text.SubTitleField.Regular"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Official Website"/>

                <TextView
                        android:id="@+id/tv_official"
                        android:clickable="true"
                        style="@style/Text.TitleField.Bold"
                        android:layout_width="wrap_content"
                        android:textColor="@color/blue_500"
                        android:layout_height="wrap_content"
                        android:text="https://kemlu.go.id"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_16dp">

                <TextView
                        android:layout_gravity="center_horizontal"
                        style="@style/Text.SubTitleField.Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Copyright Â© Kementrian Luar Negeri RI 2019. All rights reserved."/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
