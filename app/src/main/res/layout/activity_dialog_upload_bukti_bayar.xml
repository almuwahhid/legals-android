<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/lay_dialog"
        android:background="@drawable/bg_dialog"
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout android:layout_width="@dimen/dimen_128dp"
                  android:layout_marginTop="@dimen/dimen_16dp"
                  android:layout_centerHorizontal="true"
                  android:background="@drawable/bg_grey"
                  android:layout_height="6dp"></LinearLayout>
    <LinearLayout
            android:layout_marginTop="@dimen/dimen_24dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
                android:padding="@dimen/dimen_16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Nomor Dokumen : GA/001/1120"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/tv_title"
                    android:layout_centerVertical="true"
                    style="@style/Text.Standard.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
                android:text="Upload bukti pembayaran"
                android:layout_marginBottom="@dimen/dimen_8dp"
                android:textColor="@color/colorPrimary"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                style="@style/Text.Standard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <RelativeLayout android:layout_width="@dimen/dimen_180dp"
                        style="@style/clickable"
                        android:id="@+id/lay_upload"
                        android:layout_marginBottom="@dimen/dimen_32dp"
                      android:layout_gravity="center_horizontal"
                      android:background="@drawable/field_filled"
                      android:layout_height="@dimen/dimen_180dp">
                      <ImageView android:layout_width="wrap_content"
                                 android:tint="@color/colorPrimary"
                                 android:layout_centerHorizontal="true"
                                 android:layout_centerVertical="true"
                                 android:src="@drawable/ic_add_black_24dp"
                                 android:layout_height="wrap_content"/>
            <ImageView android:layout_width="match_parent"
                        android:id="@+id/img_buktibayar"
                       android:layout_height="match_parent" android:scaleType="centerCrop"/>
        </RelativeLayout>
        <Button android:layout_width="match_parent"
                android:layout_margin="@dimen/dimen_16dp"
                android:textColor="@color/colorPrimary"
                android:text="UPLOAD BUKTI PEMBAYARAN"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:id="@+id/btn_bukti_uploadbukti"
                android:background="@drawable/button_filled"
                android:layout_height="wrap_content">

        </Button>
    </LinearLayout>
</RelativeLayout>