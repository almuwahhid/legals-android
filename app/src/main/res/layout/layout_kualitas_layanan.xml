<?xml version="1.0" encoding="utf-8"?>
<id.go.kemlu.legalisasidokumen.utils.animationtoggle.AnimationToggle xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/lay_kualitaslayanan"
              android:layout_width="match_parent"
              android:visibility="gone"
              android:layout_height="match_parent"
              android:padding="@dimen/dimen_16dp">
              <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">
                  <TextView android:layout_width="wrap_content"
                            style="@style/Text.Standard"
                            android:text="Apakah anda puas dengan pelayanan kami?"
                            android:layout_height="wrap_content"/>
                  <LinearLayout android:layout_width="match_parent"
                                android:gravity="center_horizontal"
                                android:layout_marginTop="@dimen/dimen_16dp"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content">
                                <LinearLayout android:layout_width="wrap_content"
                                              android:layout_margin="@dimen/dimen_16dp"
                                              android:orientation="vertical"
                                              android:gravity="center_horizontal"
                                              android:layout_height="wrap_content">
                                            <ImageView android:layout_width="@dimen/dimen_48dp"
                                                       android:src="@drawable/ic_smile_def_3"
                                                       android:id="@+id/img_kualitas1"
                                                       android:layout_height="@dimen/dimen_48dp"/>
                                            <TextView android:layout_width="wrap_content"
                                              android:layout_marginTop="@dimen/dimen_4dp"
                                              style="@style/Text.Standard"
                                              android:text="Cukup"
                                              android:layout_height="wrap_content"/>
                                </LinearLayout>
                      <LinearLayout android:layout_width="wrap_content"
                                    android:layout_margin="@dimen/dimen_16dp"
                                    android:orientation="vertical"
                                    android:gravity="center_horizontal"
                                    android:layout_height="wrap_content">
                          <ImageView android:layout_width="@dimen/dimen_48dp"
                                     android:id="@+id/img_kualitas2"
                                     android:src="@drawable/ic_smile_def_2"
                                     android:layout_height="@dimen/dimen_48dp"/>
                          <TextView android:layout_width="wrap_content"
                                    android:layout_marginTop="@dimen/dimen_4dp"
                                    style="@style/Text.Standard"
                                    android:text="Puas"
                                    android:layout_height="wrap_content"/>
                      </LinearLayout>
                      <LinearLayout android:layout_width="wrap_content"
                                    android:layout_margin="@dimen/dimen_16dp"
                                    android:orientation="vertical"
                                    android:gravity="center_horizontal"
                                    android:layout_height="wrap_content">
                          <ImageView android:layout_width="@dimen/dimen_48dp"
                                     android:id="@+id/img_kualitas3"
                                     android:src="@drawable/ic_smile_def_1"
                                     android:layout_height="@dimen/dimen_48dp"/>
                          <TextView android:layout_width="wrap_content"
                                    android:layout_marginTop="@dimen/dimen_4dp"
                                    style="@style/Text.Standard"
                                    android:text="Puas Sekali"
                                    android:layout_height="wrap_content"/>
                      </LinearLayout>
                  </LinearLayout>
                  <TextView android:layout_width="wrap_content"
                            android:layout_margin="@dimen/dimen_8dp"
                            android:text="Saran dan Komentar"
                            style="@style/Text.Standard"
                            android:layout_height="wrap_content"/>
                  <EditText android:layout_width="match_parent"
                            style="@style/Text.Standard"
                            android:lines="4"
                            android:id="@+id/edt_kualitas"
                            android:gravity="top"
                            android:padding="@dimen/dimen_16dp"
                            android:background="@drawable/field_filled"
                            android:layout_height="wrap_content"/>
              </LinearLayout>

</id.go.kemlu.legalisasidokumen.utils.animationtoggle.AnimationToggle>