<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="id.go.kemlu.legalisasidokumen.app.detailpermohonan.permohonanselesai.KualitasLayananActivity">
    <include layout="@layout/toolbar_white"/>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:padding="16dp"
                  android:layout_height="match_parent">
        <TextView android:layout_width="wrap_content"
                  android:layout_gravity="center_horizontal"
                  android:text="Apakah Anda puas dengan pelayanan kami?"
                  style="@style/Text.Standard"
                  android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView android:layout_width="match_parent"
                                                   android:id="@+id/rv_kualitas"
                                                   android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>
        <TextView android:layout_width="wrap_content"
                  android:layout_marginTop="@dimen/dimen_8dp"
                  style="@style/Text.Standard"
                  android:text="Saran dan Komentar"
                  android:layout_height="wrap_content"/>
        <EditText android:layout_width="match_parent"
                  android:gravity="top"
                  android:maxLines="5"
                  android:lines="5"
                  android:layout_marginTop="@dimen/dimen_4dp"
                  android:background="@drawable/field_filled"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
