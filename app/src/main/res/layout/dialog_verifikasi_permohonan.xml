<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/lay_dialog"
        android:background="@drawable/bg_dialog"
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout android:layout_width="@dimen/dimen_128dp"
                  android:layout_marginTop="@dimen/dimen_16dp"
                  android:layout_centerHorizontal="true"
                  android:background="@drawable/bg_grey"
                  android:layout_height="6dp"></LinearLayout>
    <LinearLayout
            android:layout_marginTop="@dimen/dimen_24dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
                android:padding="@dimen/dimen_16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Nomor Dokumen : GA/001/1120"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/tv_title"
                    android:layout_centerVertical="true"
                    style="@style/Text.Standard.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

        </RelativeLayout>
        <LinearLayout
                android:layout_marginLeft="@dimen/dimen_8dp"
                android:layout_marginRight="@dimen/dimen_8dp"
                android:padding="@dimen/dimen_8dp"
                android:orientation="vertical"
                android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:layout_marginTop="@dimen/dimen_8dp"
                      android:textColor="@color/grey_400"
                      style="@style/Text.Standard"
                      android:text="Catatan Untuk Pemohon"
                      android:layout_height="wrap_content"/>
            <EditText android:layout_width="match_parent"
                      android:layout_marginTop="@dimen/dimen_4dp"
                      style="@style/Text.Standard"
                      android:lines="4"
                      android:id="@+id/edt_catatan"
                      android:gravity="top"
                      android:padding="@dimen/dimen_16dp"
                      android:background="@drawable/field_filled"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dimen_8dp"
                android:layout_marginRight="@dimen/dimen_8dp"
                android:padding="@dimen/dimen_8dp"
                android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    style="@style/ButtonStandardStyle"
                    android:id="@+id/btn_tolak"
                    android:text="TOLAK"
                    android:background="@drawable/button_main"
                    android:backgroundTint="@color/red_400"
                    android:layout_height="wrap_content"/>
            <Button android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    style="@style/ButtonStandardStyle"
                    android:id="@+id/btn_setuju"
                    android:layout_marginLeft="@dimen/dimen_16dp"
                    android:text="TERIMA"
                    android:background="@drawable/button_main"
                    android:backgroundTint="@color/green_400"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>