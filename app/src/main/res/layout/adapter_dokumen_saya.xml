<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lay_adapter"
        style="@style/clickable"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginLeft="@dimen/dimen_4dp"
        android:layout_marginRight="@dimen/dimen_4dp"
        android:background="@drawable/field_filled"
        android:padding="1dp"
        tools:context="id.go.kemlu.legalisasidokumen.app.adapters.DokumenSayaAdapter">
        <RelativeLayout android:layout_width="match_parent"
                        android:id="@+id/lay_status"
                        android:backgroundTint="@color/colorPrimary"
                        android:background="@drawable/bg_dokumen"
                        android:layout_height="wrap_content">
                        <RelativeLayout android:layout_width="match_parent"
                                        android:layout_marginLeft="@dimen/dimen_8dp"
                                        android:background="@drawable/bg_dokumen_right"
                                        android:padding="@dimen/dimen_16dp"
                                        android:layout_height="wrap_content">
                            <TextView android:layout_width="wrap_content"
                                      style="@style/Text.Title.OneRow"
                                      android:text="Surat Kuasa"
                                      android:id="@+id/tv_dokumen"
                                      android:layout_centerVertical="true"
                                      android:layout_height="wrap_content"/>
                            <ImageView android:layout_width="wrap_content"
                                       android:layout_alignParentRight="true"
                                       android:tint="@color/colorPrimary"
                                       android:src="@drawable/ic_chevron_right_black_24dp"
                                       android:layout_centerVertical="true"
                                       android:layout_height="wrap_content"/>
                        </RelativeLayout>
        </RelativeLayout>

</RelativeLayout>
