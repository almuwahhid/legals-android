<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/lay_dialog"
        android:background="@drawable/bg_dialog"
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout android:layout_width="@dimen/dimen_128dp"
                      android:layout_marginTop="@dimen/dimen_16dp"
                      android:layout_centerHorizontal="true"
                      android:background="@drawable/bg_grey"
                      android:layout_height="6dp"></LinearLayout>
    <LinearLayout
            android:layout_marginTop="@dimen/dimen_24dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
                android:padding="@dimen/dimen_16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Lupa kata sandi?"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/tv_title"
                    android:layout_centerVertical="true"
                    style="@style/Text.TitleField.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView android:layout_width="wrap_content"
                  android:layout_marginLeft="@dimen/dimen_16dp"
                  android:text="Jangan khawatir. Tuliskan email Anda untuk membuat kata sandi baru"
                  android:layout_centerVertical="true"
                  style="@style/Text.Standard"
                  android:layout_height="wrap_content"/>
        <RelativeLayout
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_marginRight="@dimen/dimen_16dp"
                android:layout_marginBottom="@dimen/dimen_8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:layout_width="match_parent"
                    style="@style/EditText.Form"
                    android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                        android:inputType="textEmailAddress"
                        android:id="@+id/edt_email"
                        android:layout_width="match_parent"
                        style="@style/EditText.Form"
                        android:hint="Email"
                        android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>
        <Button android:layout_width="match_parent" android:layout_height="wrap_content"
                android:id="@+id/btn_kirim"
                android:layout_gravity="right"
                android:layout_margin="@dimen/dimen_16dp"
                android:text="K I R I M"
                android:clickable="false"
                android:background="@drawable/button_disable"
                style="@style/Button"/>
    </LinearLayout>
</RelativeLayout>